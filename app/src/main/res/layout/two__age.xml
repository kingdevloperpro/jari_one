<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ai_bg"
    tools:context=".one_Layout.one_Act_Age">



    <ScrollView
        android:layout_above="@+id/big_native"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:enabled="false"
                        android:fontFamily="@font/pop_italic"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:paddingVertical="@dimen/_8sdp"
                        android:text="@string/age_group_head"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_6sdp">

                        <RadioButton
                            android:id="@+id/r1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_dark"
                            android:checked="true"
                            android:fontFamily="@font/pop_reg"
                            android:text="@string/age_group_one"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/r2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_dark"
                            android:checked="false"
                            android:fontFamily="@font/pop_reg"
                            android:text="@string/age_group_two"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/r3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_dark"
                            android:checked="false"
                            android:fontFamily="@font/pop_reg"
                            android:text="@string/age_group_three"
                            android:textSize="18dp" />

                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/age_next"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ad_exit_three"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="5dp"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/big_native"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp" />

<!--    <FrameLayout-->
<!--        android:id="@+id/small_native"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true" />-->
</RelativeLayout>